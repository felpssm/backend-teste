generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String  // ADMIN | PARTNER | CUSTOMER
  createdAt DateTime @default(now())

  salesAsCustomer Sale[] @relation("CustomerSales")
  salesAsPartner  Sale[] @relation("PartnerSales")
}

model Product {
  id     Int     @id @default(autoincrement())
  name   String
  price  Float
  active Boolean @default(true)

  sales Sale[]
}

model Sale {
  id         Int      @id @default(autoincrement())
  productId  Int
  customerId Int
  partnerId  Int
  value      Float
  createdAt  DateTime @default(now())

  product  Product @relation(fields: [productId], references: [id])
  customer User    @relation("CustomerSales", fields: [customerId], references: [id])
  partner  User    @relation("PartnerSales", fields: [partnerId], references: [id])
}
